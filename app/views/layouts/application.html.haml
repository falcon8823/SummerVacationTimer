!!!
%html
  %head
    %title お前の夏休みはあとn日しかないぞ！
    = stylesheet_link_tag "application", media: :all
    = csrf_meta_tag

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{data: {toggle: 'collapse', target: '.nav-collapse'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "お前の夏休みはあとn日しかないぞ！", root_path, class: 'brand'
          
          - if current_user
            .btn-group.pull-right
              %a.btn.dropdown-toggle{data: {toggle: 'dropdown'}, href: '#'}
                %i.icon-user
                = current_user.screen_name
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to "設定", user_edit_path
                %li
                  = link_to "サインアウト", signout_path
                %li.divider
                %li
                  = link_to "登録解除", user_destroy_path, confirm: '登録を解除してよろしいですか？', method: :delete
          - else
            .nav-collapse.pull-right
              %ul.nav
                %li
                  = link_to "Twitterで認証する", "/auth/twitter"

    .container
      - if notice
        .alert
          %button.close{data: {dismiss: 'alert'}}
          = notice
      .row
        = yield

      %hr

      %footer
        %p
          &copy;
          %a{href: "http://twitter.com/falcon_8823", target: "_blank"} falcon_8823
          2012

    = javascript_include_tag "application"

